<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fhdw.hotel.PrototypeSuchform">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stadt_spinner"
            android:entries="@array/stadt_anzeige"
            android:entryValues="@array/stadt_werte" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/personen_spinner"
            android:entries="@array/anz_personen"
            android:entryValues="@array/anz_personen" />



        <TextView
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:text="@string/startDate"
            android:id="@+id/startDate"
            android:labelFor="@+id/inputStartDate"/>



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/inputStartDate" />

        <TextView
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:text="@string/endDate"
            android:id="@+id/endDate"
            android:labelFor="@+id/inputEndDate"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/inputEndDate" />


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/betten_spinner"
            android:entries="@array/anz_betten"
            android:entryValues="@array/anz_betten"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/zimmer_spinner"
            android:entries="@array/zimmerart"
            android:entryValues="@array/zimmerart"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_suchen"
            android:id="@+id/search" />

    </LinearLayout>
</RelativeLayout>
