<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fhdw.hotel">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.SearchFormular"
            android:label="@string/title_activity_prototype_suchform">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.RoomSelection"
            android:label="@string/title_activity_accordeon_zimmer"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Activity.Login"
            android:label="@string/title_activity_login"></activity>
        <activity
            android:name=".Activity.Register"
            android:label="@string/title_activity_register"></activity>
        <activity
            android:name=".Activity.RegisterDescision"
            android:label="@string/title_activity_register_descision"
            android:theme="@android:style/Theme.Dialog"></activity>
        <activity
            android:name=".Activity.Booking"
            android:label="@string/title_activity_booking"></activity>
        <activity
            android:name=".Activity.CheckBooking"
            android:label="@string/title_activity_check_booking"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
